BAPP=4
ID=WX2IMG
Name=WX2IMG
Comment='WX2IMG is a weather satellite image decoder for Linux'
VerLocal=0
VerRemote=0
W3='https://wxtoimgrestored.xyz'
Author='spud'
NOTE='wx image'

INSTALL(){
	echo -e "INFORMATIONAL: apt-get required packages"
    cd ${BAPSRC}
    DLFILE=$(curl -s --max-time 20 https://wxtoimgrestored.xyz/downloads/ | grep -o '.*i386.deb' | grep -io '<a href=['"'"'"][^"'"'"']*['"'"'"]' | sed -e 's/^<a href=["'"'"']//i' -e 's/["'"'"']$//i')
    wget $DLFILE
    sudo dpkg -i wxtoimg_*.deb
}

VERSION(){
    if [[ $(whereis hdfm | grep bin) ]];then
        CURRENT=0-git
    else
        CURRENT=NONE
    fi
    NEWVER=$(curl -s --max-time 20 https://wxtoimgrestored.xyz/downloads/ | grep -o 'WXtoImg version.........' -m 1 | awk '{print $3}')
}

DEPENDS(){
    NEEDED=''
    #apt-gets will be checked on app-check
}
